<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.application.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Text>Welcome, please choose an action from the Menu.</Text>
    <VBox spacing="5.0">
        <Text>Main Menu:</Text>
        <Button text="Define Programming Languages" minWidth="300" onAction="#onProgramDefine"></Button>
        <Button text="Define Student Profiles" minWidth="300" onAction="#onStudentDefine"></Button>
        <Button text="Search Students" minWidth="300"></Button>
        <Button text="Reports" minWidth="300"></Button>
        <Button text="Show Stored Programming Languages" onAction="#onShowLanguages" minWidth="300"/>
        <Button text="Show Stored Student Profiles" onAction="#onShowStudents" minWidth="300"/>
    </VBox>
</VBox>
