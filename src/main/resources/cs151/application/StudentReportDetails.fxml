<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.application.StudentReportDetailsController"
      spacing="10" alignment="TOP_CENTER" prefWidth="800" prefHeight="600">

    <!-- Student profile header (form style) -->
    <Label text="Student Profile"
           style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="6">
        <padding>
            <Insets top="5" right="10" bottom="5" left="10"/>
        </padding>

        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="75"/>
        </columnConstraints>

        <children>
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Academic Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="academicLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Employment Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="employmentLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Job Details:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="jobLabel" wrapText="true"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Whitelisted:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="whitelistLabel"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Blacklisted:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="blacklistLabel"
                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Preferred Role:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label fx:id="roleLabel"
                   GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Languages:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <Label fx:id="languagesLabel" wrapText="true"
                   GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Databases:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
            <Label fx:id="databasesLabel" wrapText="true"
                   GridPane.rowIndex="8" GridPane.columnIndex="1"/>
        </children>
    </GridPane>

    <!-- Comments section -->
    <Label text="Comments"
           style="-fx-font-size: 14px; -fx-font-weight: bold;" />

    <TableView fx:id="commentTable" prefWidth="780" prefHeight="350">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
            <TableColumn fx:id="textColumn" text="Comment" prefWidth="680"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Back" onAction="#onClose"/>
        <Button text="Add New Comment" onAction="#onAddComment"/>
    </HBox>
</VBox>
